@page "/"



<h1>Pizza</h1>
<div>
    <h2> Pizza: @Pizza.Nome </h2>
    <h2> Pizza: @Pizza.DataCadastro.ToString("dd MM yyyy") </h2>
</div>

@code{

    public Produto Pizza { get { return GetProduto(); } }

    private Produto GetProduto()
    {

        return new Produto()
        {
            Nome = "Pizza Mussarela",
            DataCadastro = new DateTime(2019, 9, 6)
        };
    }

}
